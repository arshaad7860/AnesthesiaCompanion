<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/lightWhite_overlay"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"

    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        >
        <!--firstname-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name : "
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/txt_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/my_font"
                android:text="TN MUKADAM"
                android:textSize="14sp" />
        </LinearLayout>
        <!--lastname-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name : "
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/txt_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/my_font"
                android:text="lastName"
                android:textSize="14sp" />
        </LinearLayout>
        <!--phone-->
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : "
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone"
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
        </LinearLayout>
        <!--email-->
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textSize="14sp"

                android:fontFamily="@font/my_font"/>
            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
        </LinearLayout>
        <!--qualification-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Qualification : "
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/txt_required_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MBM"
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
        </LinearLayout>
        <!--experience-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience : "
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/txt_experience"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/my_font"
                android:text="10pm"

                android:textSize="14sp" />
        </LinearLayout>
        <!--occupation-->
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occupation : "
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
            <TextView
                android:id="@+id/txt_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="today"
                android:textSize="14sp"
                android:layout_alignParentStart="true"

                android:fontFamily="@font/my_font"/>
        </LinearLayout>
        <!--hospital-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital : "
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/txt_hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hospital"
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
        </LinearLayout>
        <!--status-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Status : "
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pending"
                android:textSize="14sp"
                android:fontFamily="@font/my_font"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>